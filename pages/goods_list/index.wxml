<SearchInput></SearchInput>
<Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
	<block wx:if="{{tabs[0].isActive}}">
		<view class="first_tab">
			<navigator
			 class="goods_item"
			 wx:for="{{goodsList}}"
			 wx:key="goods_id"
			 wx:for-item="goodItem"
			 wx:for-index="goodIndex"
			 url="/pages/goods_detail/index?goods_id={{goodItem.goods_id}}"
			>
				<view class="goods_img_wrap">
					<image mode="widthFix" src="{{goodItem.goods_small_logo?goodItem.goods_small_logo:'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}"></image>
				</view>
				<view class="goods_info_wrap">
					<view class="goods_name">{{goodItem.goods_name}}</view>
					<view class="goods_price">{{goodItem.goods_price}}</view>
				</view>
			</navigator>
		</view>
	</block>
	<block wx:elif="{{tabs[1].isActive}}">123</block>
	<block wx:elif="{{tabs[2].isActive}}">234</block>
</Tabs>

